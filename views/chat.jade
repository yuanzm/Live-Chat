extends layout

block content
	div(id="chat-left")
		div(id="chating-user")
			ul
				li
					span(class="chat-user-name") Live-Chat
					img(class="gravatar", src="https://avatars3.githubusercontent.com/u/6168796?v=3&amp;s=48")
		div(class="panel panel-primary")
			div(class="panel-heading")
				h2(class="panel-title", id="chat-person") Live-Chat
			div(class="panel-body")
				div(class="chat-body", id="chat-panel")
					if chats
						ul(id="chat-list")
							each chat in chats					
								li
									img(class="gravatar", src= chat.receiverData.gravatar)
									span(class="userName")=chat.userName    
									//- span(class="time")=chat.time
									br
									span(class="message")=chat.message

			div(class="panel-footer")
				div(class="input-group")
					span(class="input-group-btn")
						button(class="btn btn-default", type="button") Emoji
					input(class="form-control", id="chat-input", type="text",placeholder="请输入聊天内容") 
					span(class="input-group-btn")
						button(class="btn btn-default", type="button") Send

	div#chat-right
		div.chat-list
			div.user-name
				div(class="panel panel-success")
					div(class="panel-heading")
						span(class="glyphicon glyphicon-user")   个人信息
					div(class="panel-body")
						if user
							img(id="gravatar" class="gravatar", src= user.head)
							span(id="my-name")= user.name
						else
							span(id="my-name")
								
			div.user-list
				div(class="panel panel-success")
					div(class="panel-heading")
						span(class="glyphicon glyphicon-user")   在线用户
					div(class="panel-body")
						ul(id="live-user")
					div(class="panel-footer")
						span 在线人数 
						span(id="live-number")
